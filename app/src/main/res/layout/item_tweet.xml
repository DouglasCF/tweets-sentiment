<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="br.com.fornaro.tweetssentiment.model.Sentiment" />

        <variable
            name="tweet"
            type="br.com.fornaro.tweetssentiment.model.Tweet" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding">

        <TextView
            android:id="@+id/tweetText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{tweet.text}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/anallyzeButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/analyze"
            android:visibility="@{tweet.sentiment == Sentiment.None ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@+id/tweetText" />

    </android.support.constraint.ConstraintLayout>
</layout>